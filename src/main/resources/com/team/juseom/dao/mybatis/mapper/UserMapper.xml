<mapper namespace="com.team.juseom.dao.mybatis.mapper.UserMapper">
  <cache />

  <select id="getUserById" resultType="User">
    SELECT USERID,
          PASSWORD,
          NAME,
          PHONE,
          COMMNAME,
          PROFILEPICURL,
          ADDRESS1,
          ADDRESS2,
          ADDRESS3
    FROM "User"
    WHERE USERID = #{userId, jdbcType=VARCHAR}
  </select>

