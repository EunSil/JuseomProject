  <update id="updateUser" parameterType="User">
    UPDATE "User" SET
      PASSWORD = #{password},
      NAME = #{name},
      PHONE = #{phone},
      COMMNAME = #{commName},
      PROFILEPICURL = #{profilePicUrl, jdbcType=VARCHAR},
      ADDRESS1 = #{address1},
      ADDRESS2 = #{address2},
      ADDRESS3 = #{address3}
    WHERE USERID = #{userId}
  </update>
  
  <insert id="insertUser" parameterType="User">
  	INSERT INTO "User"
      (USERID, PASSWORD, NAME, PHONE, COMMNAME, PROFILEPICURL, ADDRESS1, ADDRESS2, ADDRESS3)
